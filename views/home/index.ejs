<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
	<!-- main content -->
	<main class="main">
		<div class="container-fluid">
			<!-- releases -->
			<section class="row row--grid">

				<iframe width="800" height="515" style="margin: 50px auto 0;" src="https://www.youtube.com/embed/uTTrHHrTeHs" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

				<!-- title -->
				<div class="col-12">
					<div class="main__title">
						<h2>New Releases for Season <%= currentSeason %> (Dec 1st - Dec 31st)</h2>

						<a href="/releases" class="main__link">See all <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"/></svg></a>
					</div>
				</div>
				<!-- end title -->

				<% mostRecentSongs.forEach(song => { %>
					<div id="season-album">
						<div>
							<div class="album__cover">
								<iframe width="560" height="315" src="https://www.youtube.com/embed/<%= song.youtubeSongId %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
							</div>
							<div class="album__title" id="song-season-details">
								<div>
									<h3><a href="/release/<%= song.songTitle %>/<%= song.artistName %>"><%= song.songTitle %></a></h3>
									<span><a href="/artist/<%= song.artistName %>"><%= song.artistName %></a></span>
								</div>
							</div>
						</div>
					</div>
				<% }) %>

			</section>
			<!-- end releases -->

			<!-- slider -->
			<section class="row row--grid" id="premAd-index-container">
				<div class="col-12">
					<div class="premiumAd owl-carousel" id="hero">
						<% ads.forEach(ad => { %>
							<% if (ad.isGoldAd) { %>
								<div class="event" data-bg="<%= ad.adBackground %>">
									<h1 class="hero__title--contestant"><%= ad.adTitle %></h1>
									<p class="hero__text"><%= ad.adDescription %></p>
									<div class="hero__btns">
										<a href="<%= ad.adAffiliateLink %>" class="hero__btn hero__btn--green">Contact Us</a>
									</div>
								</div>
							<% } %>
						<% }) %>
					</div>
				</div>
				<button class="main__nav-contestant main__nav--hero main__nav--prev" data-nav="#hero" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z"/></svg></button>
				<button class="main__nav-contestant main__nav--hero main__nav--next" data-nav="#hero" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"/></svg></button>
			</section>
			<!-- end slider -->

			<!-- articts -->
			<section class="row row--grid">
				<!-- title -->
				<div class="col-12">
					<div class="main__title">
						<h2>Artists</h2>

						<a href="/artists" class="main__link">See all <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"/></svg></a>
					</div>
				</div>
				<!-- end title -->
				<div class="col-12">
					<div class="main__carousel-wrap">
						<div class="main__carousel main__carousel--events owl-carousel" id="artists">
							<% for (let artist of artists) { %>
								<% if (artist.userType === 'Contestant') { %>
									<a href="/artist/<%= artist.name %>" class="artist" id="find-artist">
										<div class="artist__cover">
											<img src="<%= artist.userProfileImage %>" alt="">
										</div>
										<h3 class="artist__title"><%= artist.name %></h3>
									</a>
								<% } %>
							<% } %>
						</div>
					</div>
				</div>
			</section>
			<!-- end articts -->

			<!-- events -->
			<section class="row row--grid">
				<!-- title -->
				<div class="col-12">
					<div class="main__title">
						<h2>Need Help Getting To The Next Level?</h2>
					</div>
				</div>
				<!-- end title -->

				<div class="col-12">
					<div class="main__carousel-wrap">
						<div class="main__carousel main__carousel--events owl-carousel" id="events">
							<% for (let ad of ads) { %>
								<% if (ad.isSilverAd) { %>
									<div class="event" data-bg="<%= ad.adBackground %>">
										<h3 class="event__title"><a href="<%= ad.adAffiliateLink %>"><%= ad.adTitle %></a></h3>
										<p class="event__address"><%= ad.adDescription %> </p>
									</div>
								<% } %>
							<% } %>
						</div>

						<button class="main__nav main__nav--prev" data-nav="#events" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z"/></svg></button>
						<button class="main__nav main__nav--next" data-nav="#events" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"/></svg></button>
					</div>
				</div>
			</section>
			<!-- end events -->

			<section class="row row--grid">
				<div class="col-12 col-md-6 col-xl-4">
					<div class="row row--grid">
						<!-- title -->
						<div class="col-12">
							<div class="main__title">
								<h2><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.65,2.24a1,1,0,0,0-.8-.23l-13,2A1,1,0,0,0,7,5V15.35A3.45,3.45,0,0,0,5.5,15,3.5,3.5,0,1,0,9,18.5V10.86L20,9.17v4.18A3.45,3.45,0,0,0,18.5,13,3.5,3.5,0,1,0,22,16.5V3A1,1,0,0,0,21.65,2.24ZM5.5,20A1.5,1.5,0,1,1,7,18.5,1.5,1.5,0,0,1,5.5,20Zm13-2A1.5,1.5,0,1,1,20,16.5,1.5,1.5,0,0,1,18.5,18ZM20,7.14,9,8.83v-3L20,4.17Z"/></svg><a href="#">Top Hits Season <%= currentSeason %></a></h2>
							</div>
						</div>
						<!-- end title -->

						<div class="col-12">
							<ul class="main__list">
								<% topFiveSongs.forEach(topSong => { %>
									<li class="single-item">
										<div class="single-item__title">
											<h4><a href="/release/<%= topSong.songTitle %>/<%= topSong.artistName %>"><%= topSong.songTitle %></a></h4>
											<span><a href="/artist/<%= topSong.artistName %>"><%= topSong.artistName %></a></span>
										</div>
										<span class="single-item__time top-votes">Votes: <%= topSong.votes %></span>
									</li>
								<% }) %>
							</ul>
						</div>
					</div>
				</div>
			</section>
		</div>
	</main>
	<!-- end main content -->
<%- include('../includes/end.ejs') %>