<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
	<!-- main content -->
	<main class="main">
		<div class="container-fluid">
			<div class="row row--grid">
				<!-- breadcrumb -->
				<div class="col-12">
					<ul class="breadcrumb">
						<li class="breadcrumb__item"><a href="index.html">Home</a></li>
						<li class="breadcrumb__item"><a href="releases.html">Releases</a></li>
						<li class="breadcrumb__item breadcrumb__item--active">Release</li>
					</ul>
				</div>
				<!-- end breadcrumb -->

				<!-- title -->
				<div class="col-12">
					<div class="main__title main__title--page">
						<h1>Songs by <%= artist.name %></h1>
					</div>
				</div>
				<!-- end title -->

				<div class="col-12">
					<div class="release">
						<div class="release__content">
							<div class="album__cover">
								<iframe width="560" height="315" src="https://www.youtube.com/embed/<%= youtubeSongId %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen loading="lazy"></iframe>
							</div>
							<div class="release__stat">
								<span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.65,2.24a1,1,0,0,0-.8-.23l-13,2A1,1,0,0,0,7,5V15.35A3.45,3.45,0,0,0,5.5,15,3.5,3.5,0,1,0,9,18.5V10.86L20,9.17v4.18A3.45,3.45,0,0,0,18.5,13,3.5,3.5,0,1,0,22,16.5V3A1,1,0,0,0,21.65,2.24ZM5.5,20A1.5,1.5,0,1,1,7,18.5,1.5,1.5,0,0,1,5.5,20Zm13-2A1.5,1.5,0,1,1,20,16.5,1.5,1.5,0,0,1,18.5,18ZM20,7.14,9,8.83v-3L20,4.17Z"/></svg>Total Songs: <%= artist.songs.length %></span>
							</div>
							<a href="/artist/<%= artist.name %>" class="release__buy">More About This Artist</a>
						</div>

						<div class="release__list">
							<ul class="main__list main__list--playlist main__list--dashbox">
								<li class="single-item">
									<h4 class="release-total-song-title">All Releases by this artist</h4>
								</li>
								<% for (let songs of artist.songs) { %>
									<li class="single-item">
										<div class="single-item__title">
											<h4><a href="/release/<%= songs.songTitle %>/<%= artist.name %>"><%= songs.songTitle %></a></h4>
											<span><%= songs.songGenre %></span>
										</div>
										<div>
											<h5 class="release-votes">Votes: <%= songs.votes %></h5>
										</div>
									</li>
								<% } %>
							</ul>
						</div>
					</div>
				</div>

				<div class="col-12 col-lg-8">
					<div class="article">
						<!-- article content -->
						<div class="article__content">
							<h4>About the artist</h4>

							<p><%= artist.bio %></p>
						</div>
					</div>
				</div>	
			</div>
		</div>
	</main>
	<!-- end main content -->
<%- include('../includes/end.ejs', {ads: ads}) %>